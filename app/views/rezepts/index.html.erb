<%- model_class = Rezept.new.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:zutaten) %></th>
      <th><%= model_class.human_attribute_name(:zubereitung) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @rezepts.each do |rezept| %>
      <tr style ="width:500px">
        <td><%= link_to rezept.id, rezept_path(rezept) %></td>
        <td><%= rezept.title %></td>
        <td><%= rezept.zutaten %></td>
        <td><%= rezept.zubereitung %></td>
        <td><%=l rezept.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_rezept_path(rezept), :class => 'btn btn-mini' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      rezept_path(rezept),
                      :method => :delete,
                      :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_rezept_path,
            :class => 'btn btn-primary' %>
