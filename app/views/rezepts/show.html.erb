<%- model_class = @rezept.class -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:title) %>:</strong></dt>
  <dd><%= @rezept.title %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zutaten) %>:</strong></dt>
  <dd><%= @rezept.zutaten %></dd>
  <dt><strong><%= model_class.human_attribute_name(:zubereitung) %>:</strong></dt>
  <dd><%= @rezept.zubereitung %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              rezepts_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_rezept_path(@rezept), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              rezept_path(@rezept),
              :method => 'delete',
              :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')),
              :class => 'btn btn-danger' %>
</div>
