<%= simple_form_for @rezept, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :title %>
  <%= f.input :zutaten %>
  <%= f.input :zubereitung %>
  <div class="form-actions">
    <%= f.button :submit, :class => 'btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                rezepts_path, :class => 'btn' %>
  </div>
<% end %>
